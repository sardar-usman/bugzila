<div class="col-md-4 offset-4">
  <h1>Create New Bug</h1>
</div>

<%= form_for @bug, html: { multipart: true } do |f| %>
  <div class="form-group">
    <div class="form-group">
      <div class="col-md-4 offset-4">
      <%= f.label :project_id, 'Select Project', class: 'control-label'%><br>
      <%= f.select :project_id, @projects.collect {|p| [ p.name, p.id ]}, { :selected => @bug.project_id }, {class: 'form-control', required: true} %>
      </div>
    </div>

    <div class="col-lg-4 offset-4 dropdown">
      <%= f.label :name, 'Title'%>
      <%= f.text_field :title, autofocus: true, class: 'form-control', :required => true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 offset-4">
      <%= f.label :severity, 'Severity', class: 'control-label'%><br>
      <%= f.radio_button :severity, 'critical', {required: true} %> Critical <br />
      <%= f.radio_button :severity, 'high', {required: true} %> High <br />
      <%= f.radio_button :severity, 'medium', {required: true} %> Medium <br />
      <%= f.radio_button :severity, 'low', {required: true} %> low <br />
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 offset-4 dropdown">
      <%= f.label :actual_result, 'Actual Result'%>
      <%= f.text_area :actual_result, autofocus: true, class: 'form-control', :required => true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 offset-4 dropdown">
      <%= f.label :expected_result, 'Expected Result'%>
      <%= f.text_area :expected_result, autofocus: true, class: 'form-control', :required => true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 offset-4 dropdown">
      <%= f.label :screen_shot, 'Upload Bug Image'%> <br />
      <% if @bug.screen_shot.present?%>
        <%= image_tag @bug.screen_shot.url(:thumb) %><br/>
      <% end %>
      <%= f.file_field :screen_shot%>
    </div>
  </div>

  <div class="form-group">
      <div class="col-md-4 offset-4">
      <%= f.label :user_id, 'Assign To', class: 'control-label'%><br>
      <%= f.select :user_id, @users.collect {|p| [ p.name, p.id ]}, { :selected => @bug.user_id }, {class: 'form-control', required: true} %>
      </div>
    </div>

  <div class="form-group">
    <div class="col-md-4 offset-4">
      <%= f.submit 'Update Bug', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
