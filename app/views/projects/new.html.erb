<div class="col-md-4 offset-4">
  <h1>Create New Project</h1>
</div>

<%= form_for @project do |f| %>
  <div class="form-group">
    <div class="col-md-4 offset-4 dropdown">
      <%= f.label :name, 'Project Name'%>
      <%= f.text_field :name, autofocus: true, class: 'form-control', :required => true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 offset-4 dropdown">
      <%= f.label :description, 'Project Description'%>
      <%= f.text_area :description, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 offset-4">
      <%= f.label :manager, 'Project Manager', class: 'control-label'%><br>
      <%= f.select :manager_id, options_from_collection_for_select(@managers, :id, :name), {include_blank: true}, {class: 'form-control', required: true} %>
    </div>
  </div>

   <div class="form-group">
    <div class="col-md-4 offset-4">
      <%= f.submit 'Add Project', class: 'btn btn-primary' %><br>
      <%= link_to "Back", :back %>
    </div>
  </div>
<% end %>
