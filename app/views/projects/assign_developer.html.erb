<div class= 'container'>
  <div class="row">
    <h2 class="mt-3 text-muted"> Assign Developer </h2>
    <table id="example" class="table table-striped table-bordered mt-2">
      <thead>
        <tr>
          <th>Developer Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
         <% @developers.each do |d| %>
          <tr>
            <td> <%= d.name %> </td>
            <td>
              <% if @project_user.exists?(d.id) %>
                <%= link_to "Remove Developer", remove_developer_project_path(user_id: d.id), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
              <% else %>
                <%= link_to "Add Developer", add_developer_project_path(user_id: d.id), method: 'post', class: 'btn btn-success btn-sm' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Back", :back %>
  </div>
</div>
